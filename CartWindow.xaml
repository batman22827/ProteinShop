<Window x:Class="ProteinShop.CartWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProteinShop"
        mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        Title="Корзина покупателя"  Height="450" Width="800">
    <Grid Background="#ffdadada">

        <Border MinWidth="550" MaxWidth="1000" Margin="10,0,15,0" Background="White" VerticalAlignment="Center" Padding="30"  CornerRadius="20" MinHeight="500">
            <Border.Effect>
                <DropShadowEffect BlurRadius="60" Color="DarkGray" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel Margin="0,0,-1,0">

                <TextBlock Text="Корзина:" FontSize="22" FontWeight="Bold" Margin="0 0 0 0" />
                <Button  Content="Магазин" FontSize="15" FontWeight="Bold" Width="150" Click="shopClick" Margin="0,0,-500,0" Cursor="Hand" Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" />
                <ListView x:Name="listOfCart" Margin="10">
                    
                </ListView>



            </StackPanel>
        </Border>
    </Grid>
</Window>
